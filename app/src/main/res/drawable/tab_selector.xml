<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:innerRadius="0dp"
            android:shape="ring"
            android:thickness="5dp"
            android:useLevel="false">
            <solid android:color="@color/colorDetailTile" />
            <stroke android:color="@color/colorDetailTile" android:width="@dimen/_1sdp" />
        </shape>
    </item>
    <item android:state_selected="false" >
        <shape android:innerRadius="0dp"
               android:shape="ring"
            android:thickness="5dp"
            android:useLevel="false" >
            <stroke android:color="@color/colordescriptionText" android:width="@dimen/_1sdp" />
        </shape>
    </item>
</selector>